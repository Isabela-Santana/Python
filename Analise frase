def analisar_frase(frase):
  frase = frase.lower()

  total_a = frase.count('a')

  primeira_posicao = frase.find('a') +1
  
  ultima_posicao = frase.rfind('a') + 1


  print(f"Quantidade de vezes que a letra 'a' aparece na frase: {total_a}")
  print(f"Primeira posição da letra 'a' na frase: {primeira_posicao}")
  print(f"Última posição da letra 'a' na frase: {ultima_posicao}")

frase_digitada=input("Digite uma frase:")
analisar_frase(frase_digitada)
